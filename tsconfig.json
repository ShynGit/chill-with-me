{
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "build",
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,

        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,

        "isolatedModules": true,
        // "noEmit": true,
        "jsx": "react-jsx"
    },
    // "include": ["src"]
    "include": ["src/**/*", "**/*.ts", "**/*.tsx", "react-app-env.d.ts"],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.js"
    ],
    "types": ["typePatches"]
}
